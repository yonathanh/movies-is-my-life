
<div class="location-center">
    <form id="form" action="/signup" method="POST">
      <h2>Sign Up</h2>
  
      <label for="username">Username</label><br>
      <input class="form-control" type="text" name="username" placeholder="AnakinSkywalker">
      <br>
  
      <label for="password">Password</label><br>
      <input class="form-control" type="password" name="password" placeholder="DeathStar">
      <br>
  
      <label for="email">eMail</label><br>
      <input class="form-control" type="text" name="email" placeholder="Anakin@Skywalker.com">
      <br>

      <label for="imageSrc">image src</label><br>
      <input class="form-control" type="text" name="image" value="{{user.image}}">
      <br>
  
      {{#if errorMessage}}
      <div class="error-message">{{ errorMessage }}</div>
      {{/if}}
  
      <button class="btn btn-dark">Create account</button>
      <br> <br>
      <p class="account-message">
        Have an account? <a class="btn btn-dark" href="/login">Sign in</a>
      </p>
      <p class="account-message">
       Sign in with google <a class="btn btn-google" href="/auth/google"> Google</a>
      </p>
    </form>
</div>